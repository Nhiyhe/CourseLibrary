<%  include ../partials/header %>
<h2>Authors</h2>
<% if(currentUser){ %>
<div class="btn-toolbar">
    <a href="/author/new" 
    class="btn btn-primary">Add Author</a>
</div>
<% } %>
<br>
<div>
<% authors.forEach(function(author){ %>

<div class="col-md-3">
<a href="/author/<%= author._id %>"><div class="">
<p><img src="<%= author.image %>" class="thumbnail" /></p>
<h4> <%= author.name %> <%= author.lastname %></h4>
</div>
</a>
</div>

<% })%>
</div>
<%  include ../partials/footer %>